<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../helpers/header.ejs') %>
    <title>Events</title>
</head>
<body>
    <div id="wrapper">
        <%- include('../helpers/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <%- include('../helpers/navbar.ejs') %>
            <div id="content"></div>
                <% if (typeof message !== 'undefined') { %>
                    <div class="alert alert-info" role="alert">
                        <%= message %>
                    </div>
                <% } %>
                <div class="container-fluid">
                    <h1 class="h3 mb-4 text-gray-800">Events</h1>
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">All Events</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <% if (events && events.length > 0) { %>
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Event ID</th>
                                                <th>Title</th>
                                                <th>Description</th>
                                                <th>Location</th>
                                                <th>Event Date</th>
                                                <th>Created At</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% events.forEach(function(event) { %>
                                                <tr>
                                                    <td><%= event.event_id %></td>
                                                    <td><%= event.title %></td>
                                                    <td><%= event.description %></td>
                                                    <td><%= event.location %></td>
                                                    <td><%= event.event_date %></td>
                                                    <td><%= new Date(event.created_at).toLocaleDateString() %></td>
                                                    <td>
                                                        <a href="/admin/events/edit/<%= event.event_id %>" class="btn btn-primary btn-sm">Edit</a>
                                                        <a href="/admin/events/delete/<%= event.event_id %>" class="btn btn-danger btn-sm">Delete</a>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                <% } else { %>
                                    <p>No events available at the moment.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="container-fluid">
                        <a href="/admin/events/new" class="btn btn-success mb-4">
                            <i class="fas fa-plus"></i> New Event
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../helpers/script.ejs') %>
</body>
</html>
