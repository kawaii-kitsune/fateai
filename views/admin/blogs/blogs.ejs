<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('../helpers/header.ejs') %>

        <title>FAME Admin- Dashboard</title>

</head>

<body>
    <div id="wrapper">
       
        <%- include('../helpers/sidebar.ejs') %>
            <div id="content-wrapper" class="d-flex flex-column">
                <%- include('../helpers/navbar.ejs') %>
                    <div id="content">
                            <% if (typeof message !== 'undefined') { %>
                                <div class="alert alert-info" role="alert">
                                    <%= message %>
                                </div>
                            <% } %>
                        <div class="container-fluid">
                            <h1 class="h3 mb-4 text-gray-800">Blogs</h1>
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">All Blogs</h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Title</th>
                                                    <th>Author</th>
                                                    <th>Updatetd At</th>
                                                    <th>Created At</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% blogs.forEach(blog => { %>
                                                    <tr>
                                                        <td><%= blog.title %></td>
                                                        <td><%= blog.author %></td>
                                                        <td><%= new Date(blog.updated_at).toLocaleDateString() %></td>
                                                        <td><%= new Date(blog.created_at).toLocaleDateString() %></td>
                                                        <td>
                                                            <a href="/admin/blogs/edit/<%= blog.blog_id %>" class="btn btn-primary btn-circle btn-sm">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <a href="/admin/blogs/delete/<%= blog.blog_id %>" class="btn btn-danger btn-circle btn-sm" onclick="return confirm('Are you sure you want to delete this blog?')">
                                                                <i class="fas fa-trash"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <a href="/admin/blogs/new" class="btn btn-success btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-plus"></i>
                                        </span>
                                        <span class="text">Add New Blog</span>
                                    </a>
                                </div>
                            </div>          
                        </div>
                    </div>
                    
                    
            </div>
    </div>
    <%- include('../helpers/script.ejs') %>


</body>

</html>